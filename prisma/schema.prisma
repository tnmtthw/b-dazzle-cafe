generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}

model User {
  id        String   @id @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name      String
  email     String   @unique
  password  String
  role      String   @default("User")
  createdAt DateTime @default(now())
}

model Product {
  id              String   @id @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  image           String
  name            String
  description     String
  price           Int
  sold            Int?     @default(0)
  createdAt       DateTime @default(now())
}